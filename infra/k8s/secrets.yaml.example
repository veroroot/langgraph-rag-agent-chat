# 이 파일을 secrets.yaml로 복사하고 실제 값으로 변경하세요
# kubectl create secret generic app-secrets --from-file=secrets.yaml -n langchain-langgraph-agent
# 또는 kubectl apply -f secrets.yaml (base64로 인코딩된 값 사용)

apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: langchain-langgraph-agent
type: Opaque
stringData:
  # JWT Secret Key (openssl rand -hex 32로 생성)
  SECRET_KEY: "your-secret-key-change-in-production-use-openssl-rand-hex-32"
  
  # Database credentials
  POSTGRES_USER: "postgres"
  POSTGRES_PASSWORD: "your-postgres-password"
  POSTGRES_DB: "rag_agent"
  DATABASE_URL: "postgresql://postgres:your-postgres-password@postgres-service:5432/rag_agent"
  
  # OpenAI API Key
  OPENAI_API_KEY: "your-openai-api-key-here"
  
  # Optional: Anthropic API Key
  ANTHROPIC_API_KEY: ""
  
  # Optional: AWS S3 credentials (if using S3 storage)
  AWS_ACCESS_KEY_ID: ""
  AWS_SECRET_ACCESS_KEY: ""
  AWS_REGION: ""
  S3_BUCKET_NAME: ""

